---
import Widget from "../components/widget.astro";
import Layout from "../layouts/Layout.astro";
import List from "../components/list.astro";
import Section from "../components/section.astro"
---
<Layout>
    <div class="flex flex-row justify-between gap-24">
        <Widget width="w-[350px]" height="h-auto">
          <p class="currently text font-bold text-3xl">Top Artistas</p>
        </Widget>
        <Section extraClass="shadow-lg" flex="flex-col">
            <form action="" class="flex flex-col p-2 gap-2">                
            <label class="flex items-center gap-2">
                <span class="inline-block w-24 text-center">1 mes</span>
                <input class="appearance-none rounded-md w-8 h-8 bg-backgroundPrimary" type="radio" name="time" value="1dia" checked>
            </label>
            <label class="flex items-center gap-2">
                <span class="inline-block w-24 text-center">6 meses</span>
                <input class="appearnace-none rounded-md w-8 h-8 bg-backgroundPrimary" type="radio" name="time" value="1mes">    
            </label>
            <label class="flex items-center gap-2">
                <span class="inline-block w-24 text-center">Toda la vida</span>
                <input class="appearance-none rounded-md w-8 h-8 bg-backgroundPrimary" type="radio" name="time" value="1ano">
            </label>
            </form>
        </Section>
    </div>
    <div class="mt-12">
        <Section flexOrientation="flex-col" extraClass="shadow-md">
            <List number="1" title="null"></List>
            <List number="2" title="null"></List>
            <List number="3" title="null"></List>
            <List number="4" title="null"></List>
            <List number="5" title="null"></List>
            <List number="6" title="null"></List>
            <List number="7" title="null"></List>
            <List number="8" title="null"></List>
            <List number="9" title="null"></List>
            <List number="10" title="null"></List>
        </Section>
    </div>
</Layout>